[MAIN]

ignored-modules=openmm.unit
ignore=_version.py
extension-pkg-whitelist=openmm.app.internal.compiled,openmm._openmm

[DESIGN]

max-locals=15  # Maximum number of local variables for function/method body

[BASIC]

function-naming-style=snake_case
argument-naming-style=snake_case
method-naming-style=camelCase  # For compatibility with OpenMM's naming style

[FORMAT]
good-names=i,j,k,_,x,y,z
